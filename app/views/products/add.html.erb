<div class='container' id='signupBanner'>
  <div class="jumbotron">
    <div class="container">
      <h1 class="display-4">Add a product</h1>
    </div>
  </div>
</div>
<div class='container'>
  <div id='signupForm' class='container'>
    <%= form_tag("/products/create",{multipart:true}) do %>
      <% @product.errors.full_messages.each do |message| %>
        <div class="alert alert-danger">
          <%= message %>
        </div>
      <% end %>
      <div class="form-group">
        Product Name
        <input class="form-control" name="name" value='<%= @name %>'>
      </div>
      <div class="form-group">
        Image
        <input type="file" class="form-control" name="image" value='<%= @image %>'>
      </div>
      <div class="form-group">
        Description
        <input class="form-control" name="description" value='<%= @description %>'>
      </div>
      <div class="form-group">
        Starting Bid (in Rs.)
        <input class="form-control" name="start_bid" value='<%= @start_bid%>'>
      </div>
      <div class="form-group">
        Deadline Date
        <input class="form-control" type="date" name="deadline_date" value='<%= @deadline_date %>'>
      </div>
      <div class="form-group">
        Deadline Time
        <input class="form-control" type="time" name="deadline_time" value='<%= @deadline_time %>'>
      </div>
      <button type="submit" class="btn btn-primary">Add</button>
    <% end %>
  </div>
</div>

